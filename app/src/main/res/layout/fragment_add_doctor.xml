<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >


<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/drawable_curve"
        tools:ignore="MissingConstraints" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="#F4F9F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/complete_name"
                android:layout_width="164dp"
                android:layout_height="36dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/round_feature_btn"
                android:hint="Complete Hospital Name"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="Autofill"
                tools:targetApi="lollipop" />

            <EditText
                android:id="@+id/complete_address"
                android:layout_width="164dp"
                android:layout_height="36dp"
                android:background="@drawable/round_feature_btn"
                android:hint="Complete Address"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textSize="12sp"
                tools:ignore="Autofill"
                tools:layout_editor_absoluteX="200dp"
                tools:layout_editor_absoluteY="8dp"
                tools:targetApi="lollipop" />

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/add_hospital_into_database"
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/round_feature_btn"
                android:paddingLeft="10dp"
                app:hintText="City"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.461"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/complete_address" />

            <EditText
                android:id="@+id/add_email_address"
                android:layout_width="164dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/round_feature_btn"
                android:hint="Enter Your Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/add_phone_no_hospital"
                app:layout_constraintTop_toBottomOf="@+id/add_hospital_into_database"
                tools:ignore="Autofill"
                tools:targetApi="lollipop" />

            <EditText
                android:id="@+id/add_phone_no_hospital"
                android:layout_width="164dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/round_feature_btn"
                android:hint="Phone Number"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/add_email_address"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_hospital_into_database"
                tools:ignore="Autofill"
                tools:targetApi="lollipop" />

            <EditText
                android:id="@+id/add_hospital_website_link"
                android:layout_width="340dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/round_feature_btn"
                android:hint="Website Link"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_phone_no_hospital"
                tools:ignore="Autofill"
                tools:targetApi="lollipop" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/upload_hospital_pic"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/round_green_btn"
                android:text="Upload Pic"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/file_path"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_hospital_website_link" />

            <EditText
                android:id="@+id/hospital_description"
                android:layout_width="320dp"
                android:layout_height="89dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btn_round_gray"
                android:backgroundTint="@android:color/white"
                android:hint="Description"
                android:lines="10"
                android:paddingLeft="20dp"
                android:paddingBottom="45dp"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/upload_hospital_pic" />

            <TextView
                android:id="@+id/file_path"
                android:layout_width="73dp"
                android:layout_height="25dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="110dp"
                android:text="File_Path"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/upload_hospital_pic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/upload_hospital_pic" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/add_doctors_hospital"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/holo_blue_dark"
                android:text="Add Doctor"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.421"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hospital_description"
                app:layout_constraintVertical_bias="0.084"
                tools:ignore="MissingConstraints" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/appCompatTextView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="Hospital Social Media Info"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.037"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_doctors_hospital" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/connect_facebook"
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/facebook_btn"
                android:drawableLeft="@drawable/attach_facebook"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:singleLine="true"
                android:text="Connect With Facebook"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/connect_linkedin"
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/facebook_btn"
                android:drawableLeft="@drawable/connect_linkedin"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:singleLine="true"
                android:text="Connect With Linkedin"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/connect_facebook" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/connect_twitters"
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="65dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/facebook_btn"
                android:drawableLeft="@drawable/connected_twitter"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:singleLine="true"
                android:text="Connect With Twitter"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/connect_linkedin" />




        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>