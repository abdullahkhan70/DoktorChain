<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abdullahkhan.doktorchain">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:layoutDirection="rtl"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WalkThrough"/>
        <!--<activity-->
            <!--android:name=".user_navigation_drawer"-->
            <!--android:label="@string/title_activity_user_navigation_drawer" />-->
        <activity
            android:name=".user_profile_navigation_bar"
            android:label="@string/title_activity_user_profile_navigation_bar"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".splashScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".registrationScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".loginScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".registerscreen"
            android:label="@string/title_activity_registration_screen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
    </application>

</manifest>